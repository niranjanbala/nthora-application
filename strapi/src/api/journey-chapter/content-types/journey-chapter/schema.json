{
  "kind": "collectionType",
  "collectionName": "journey_chapters",
  "info": {
    "singularName": "journey-chapter",
    "pluralName": "journey-chapters",
    "displayName": "Journey Chapter",
    "description": "Chapters for organizing the product journey"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date"
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "published"],
      "default": "draft",
      "required": true
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 1
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "journey_entries": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::journey-entry.journey-entry",
      "mappedBy": "chapter"
    }
  }
}