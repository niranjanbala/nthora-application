{
  "kind": "collectionType",
  "collectionName": "journey_entries",
  "info": {
    "singularName": "journey-entry",
    "pluralName": "journey-entries",
    "displayName": "Journey Entry",
    "description": "Daily entries documenting the product journey"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "date": {
      "type": "date",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "mood": {
      "type": "enumeration",
      "enum": ["excited", "frustrated", "breakthrough", "reflective", "determined"],
      "required": true,
      "default": "reflective"
    },
    "tags": {
      "type": "json",
      "required": false
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "metrics": {
      "type": "json",
      "required": false
    },
    "lessons": {
      "type": "json",
      "required": false
    },
    "chapter": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::journey-chapter.journey-chapter",
      "inversedBy": "journey_entries"
    }
  }
}